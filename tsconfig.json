{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "outDir": "dist",
    "lib": [
      "ESNext",
      "dom"
    ],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "declaration": true,
    "importHelpers": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "sourceMap": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "jsx": "react",
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "./src/**/*",
    "types"
  ]
}